{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.0",
  "homepage_url": "https://github.com/purdy/cachestatus-firefox",
  "author": "Jason Purdy",

  "description": "__MSG_extensionDescription__",

  "icons": {
    "48": "icons/48.png"
  },

  "applications": {
    "gecko": {
      "id": "cache@status.org"
    }
  },

  "permissions": ["browsingData", "notifications", "storage"],

  "browser_action": {
    "default_icon": "icons/48.png",
    "browser_style": true,
    "default_popup": "cs-popup.html"
  },

  "background": {
    "scripts": ["cachestatus.js"]
  },

  "default_locale": "en"

}
